<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cc.valyriansteelers.news">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="@xml/my_backup_rules"
        android:icon="@drawable/news"
        android:label="ChooseUrNews"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".adapter_and_activity.MainActivity"
            android:resizeableActivity="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".adapter_and_activity.NewsDetailsActivity"
            android:resizeableActivity="true"
            />
        <activity
            android:name=".adapter_and_activity.BookMarkActivity"
            android:resizeableActivity="true"
            android:label="Bookmarked News"
            />
    </application>

</manifest>